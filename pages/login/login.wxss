/* pages/login/login.wxss */

.login_app {
  height: auto;
  min-height: 100%;
  background-color: #fff;
  padding: 0 40rpx;
}

.login_app input {
  border: 1px solid #ddd;
  height: 100%;
  font-size: 28rpx;
  color: #333;
  padding-left: 20rpx;
}

.loginMes {
  width: 100%;
  height: 94rpx;
  margin-top: 32rpx;
  position: relative;
}

.SubmitButton {
  background-image: -webkit-gradient(linear, left top, right top, from(#ff937b), to(#fc2e4f));
  background-image: -webkit-linear-gradient(left, #ff937b, #fc2e4f);
  background-image: linear-gradient(90deg, #ff937b, #fc2e4f);
  color: #fff;
  border-radius: 0;
  margin-top: 40rpx;
  height: 94rpx;
  line-height: 94rpx;
}
