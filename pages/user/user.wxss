/* pages/user/user.wxss */

.profile {
  display: -webkit-flex;
  display: flex;
  padding: 200rpx 40rpx 40rpx;
  color: #fff;
  -webkit-align-items: center;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  background: #fff;
  border-radius: 60rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.profile_text {
  overflow: hidden;
  margin-left: 40rpx;
  -webkit-flex-grow: 1;
  flex-grow: 1;
}

.profile_name {
  font-size: 50rpx;
  margin-bottom: 10rpx;
  font-weight: 700;
}

.profile_phone {
  font-size: 20rpx;
}

.table_menu {
  width: 100%;
  height: 160rpx;
  background: #fff;
  border-bottom: 1px solid #ddd;
  display: table;
}

.table_menu_item {
  display: table-cell;
  text-align: center;
  vertical-align: middle;
  font-size: 24rpx;
  color: #333;
}

.table_menu_item:nth-child(2n+1) {
  border-right: 1px solid #ededed;
}
