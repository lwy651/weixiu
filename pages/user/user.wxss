/* pages/user/user.wxss */

.profile {
  display: -webkit-flex;
  display: flex;
  background-image: -webkit-gradient(linear, left top, right top, from(#ff937b), to(#fc2e4f));
  background-image: -webkit-linear-gradient(left, #ff937b, #fc2e4f);
  background-image: linear-gradient(90deg, #ff937b, #fc2e4f);
  padding: 200rpx 40rpx 40rpx;
  color: #fff;
  -webkit-align-items: center;
  align-items: center;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  background: #fff;
  border-radius: 60rpx;
}
.avatar image{
  width: 100%;
  height: 100%;
}

.profile_text {
    overflow: hidden;
    margin-left: 40rpx;
    -webkit-flex-grow: 1;
    flex-grow: 1
}
.profile_name{
  font-size: 40rpx;
  margin-bottom: 10rpx;
}
.profile_phone{
  font-size: 20rpx;
}